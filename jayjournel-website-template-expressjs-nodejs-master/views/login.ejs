    <div class="row">
      <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
        <div class="card card-signin my-5">
          <div class="card-body">
            <h5 class="card-title text-center">Login</h5>
            <form class="form-signin" class="was-validated" autocomplete="off" action="/login" method="post">
              <div class="form-label-group">
                <input  class="form-control input-size-medium" id="journal_username_input"
							type="text" name="journal_username_input"
							placeholder="ajrs username..." required/><label for="journal_username_input">AJRS Username</label><div class="invalid-feedback">Please fill out this field.</div>
              </div>

                           <div class="form-label-group">
                <input  class="form-control input-size-medium" id="journal_password_input"
							type="password" name="journal_password_input"
							placeholder="ajrs password..." required/><label for="journal_password_input">AJRS Password</label><div class="invalid-feedback">Please fill out this field.</div>
              </div>
              <input id="url" type="hidden" name="url" <% if (typeof url !== 'undefined' && url) { %>value="<%= url %>" <%}%>/>

              <div class="custom-control custom-checkbox mb-3">
                <input type="checkbox" class="custom-control-input" id="customCheck1">
                <label class="custom-control-label" for="customCheck1">Remember password</label>
              </div>
              <button class="btn btn-lg btn-primary btn-block text-uppercase" type="submit">Login</button> </br>
              <strong id="login_error_panel" class=<%= status %> style="overflow-x: auto;"><%= message %></strong>
              <!-- <button  id="myButton" class="btn btn-lg btn-primary btn-block text-uppercase" type="submit">Signup</button>
              <script type="text/javascript">
                document.getElementById("myButton").onclick = function () {
                    location.href = '/signup';
                };
            </script> -->
            <a href="/">Click here to goto Home Page</a>

            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  

